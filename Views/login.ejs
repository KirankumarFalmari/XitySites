    <script>
      const clickEvent = (first, last) => {
        if (first.value.length) {
          document.getElementById(last).focus();
        }
      };
      const call = (event) => {
        const phone = document.getElementById("pno").value;

        axios
          .post(`http://xitysiteadmin.profcymadev.in:5000/admin-otp/${phone}`)
          .then((res) => {
            console.log(res.data.userExist);
            if (res.data.userExist !== true) {
              location.reload();
            }
          })
          .catch((err) => {
            console.log(err);
          });
      };
    </script>
