    <script>
      function getdata(event){
      //  event.preventDefault()  
      const name = document.getElementById("selectcountry").value;
      // console.log();
      
      var htmldata="";
       axios.get("http://localhost:5000/master/pincode/statedata")
       .then(function(res){
      
        res.data.forEach(function(data){
         
          if(name===data.countryid){
          htmldata+=`
          <option value="${data._id}">${data.name}</option>
          `;
          }
        })
        
        document.getElementById("selectstate").innerHTML=htmldata;
        // getcitydata(event)
      })
      }
      function getcitydata(event){
      //  event.preventDefault()  
      const name = document.getElementById("selectstate").value;
      // console.log();
      
      var htmldata="";
       axios.get("http://localhost:5000/master/pincode/citydata")
       .then(function(res){
        
        res.data.forEach(function(data){
         
          if(name===data.stateid){
          htmldata+=`
          <option value="${data._id}">${data.name}</option>
          `;
          }
        })
        
        document.getElementById("selectcity").innerHTML=htmldata;
      })
      }
        </script>
    
